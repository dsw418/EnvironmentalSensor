<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.msiworldwide.environmentalsensor.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/field_image"
                    android:layout_width="122dp"
                    android:layout_height="95dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/field_image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/Field_Select"
                        android:layout_width="150dp"
                        android:layout_height="54dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="#daecf7"
                        android:gravity="center_vertical"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="44dp"
                        android:layout_height="53dp"
                        android:layout_marginLeft="-70dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@mipmap/drop" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/canal_image"
                    android:layout_width="122dp"
                    android:layout_height="95dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/water" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/Water_Source_Select"
                        android:layout_width="150dp"
                        android:layout_height="54dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="#daecf7"
                        android:gravity="center_vertical"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="44dp"
                        android:layout_height="53dp"
                        android:layout_marginStart="-70dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@mipmap/drop" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/crop_image"
                    android:layout_width="122dp"
                    android:layout_height="95dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/crops" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/Crop_Select"
                        android:layout_width="150dp"
                        android:layout_height="54dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:background="#daecf7"
                        android:gravity="center_vertical"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="44dp"
                        android:layout_height="53dp"
                        android:layout_marginStart="-70dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@mipmap/drop" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/connect_image"
                    android:layout_width="122dp"
                    android:layout_height="95dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:scaleType="center"
                    android:src="@mipmap/bluetooth" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/Device_Select"
                        android:layout_width="150dp"
                        android:layout_height="54dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:background="#daecf7"
                        android:gravity="center_vertical"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="44dp"
                        android:layout_height="53dp"
                        android:layout_marginStart="-70dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@mipmap/drop" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="No Bluetooth Connection" />


        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="5dp">

            <Button
                android:id="@+id/Measure_button"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:drawableLeft="@drawable/img_btn_measure"
                android:drawablePadding="10dp"
                android:gravity="left|center"
                android:text="Measure"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#fff"
                android:textSize="18sp"
                android:onClick="openMeasurementLocations"
                android:theme="@style/myBtnColor" />

            <Button
                android:id="@+id/btnViz"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:drawableLeft="@drawable/img_btn_viz"
                android:drawablePadding="10dp"
                android:gravity="left|center"
                android:text="Visualization"
                android:layout_weight="1"
                android:onClick="btnVizMeasure"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#fff"
                android:textSize="18sp"
                android:theme="@style/myBtnColor" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>

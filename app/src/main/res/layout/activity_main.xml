<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.msiworldwide.environmentalsensor.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:id="@+id/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/field_image"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:src="@mipmap/field_image" />

        <Spinner
            android:id="@+id/Field_Select"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_marginLeft="30dp"
            android:background="@android:color/holo_green_dark"
            android:gravity="center_vertical"
            android:spinnerMode="dropdown" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="53dp"
            android:layout_marginLeft="-44dp"
            android:gravity="center"
            android:src="@mipmap/drop" />

    </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/canal_image"
            android:layout_width="122dp"
            android:layout_height="74dp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:src="@mipmap/water" />

        <Spinner
            android:id="@+id/Water_Source_Select"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_marginStart="30dp"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center_vertical"
            android:spinnerMode="dropdown" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="53dp"
            android:layout_marginStart="-44dp"
            android:gravity="center"
            android:src="@mipmap/drop" />

    </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:src="@mipmap/croppic"
            android:id="@+id/crop_image" />
        <Spinner
            android:id="@+id/Crop_Select"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_marginStart="30dp"
            android:background="#A2CC8E"
            android:gravity="center_vertical"
            android:spinnerMode="dropdown" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="53dp"
            android:layout_marginStart="-44dp"
            android:gravity="center"
            android:src="@mipmap/drop" />
    </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:src="@mipmap/connect"
            android:id="@+id/connect_image" />
        <Spinner
            android:id="@+id/Device_Select"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_marginStart="30dp"
            android:background="#5B9BD5"
            android:gravity="center_vertical"
            android:spinnerMode="dropdown" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="53dp"
            android:layout_marginStart="-44dp"
            android:gravity="center"
            android:src="@mipmap/drop" />
    </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

    <Button
        android:id="@+id/Measure_button"
        android:layout_width="247dp"
        android:layout_height="66dp"
        android:drawableRight="@mipmap/meter"
        android:gravity="left|center"
        android:onClick="openMeasurementLocations"
        android:text="   Measure"
        android:textSize="24sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
